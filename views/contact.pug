//- CONTACT PAGE
extends base.pug
//- writing script block
block scripts 
    script
        include ../static/index.js

//- writing block Style
block style 
    style 
        include ../static/style.css
        include ../static/Contactstyle.css
    link(rel='stylesheet' media='only screen and (max-device-width: 1500px)' href='../static/resp.css')

//- writing body block
block content 
    div#contact 
        h1 Contact Us
        form(action="/contact", method="post",class= "myform")
            input(type="text",class="myinput",name="name",placeholder="Enter Your Name") 
            input(type="phone",class="myinput",name="phonenumber",placeholder="Enter Your phonenumber")
            input(type="email",class="myinput",name="email",placeholder="Enter Your Email Id")
            input(type="text",class="myinput",name="Address",placeholder="Enter Your Address")
            input(type="text",class="myinput",name="Query",placeholder="Enter Your Query")
            button(type="submit",class="btn") 
